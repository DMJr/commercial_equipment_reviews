<div class="row" id="businessHeader">
  <h1> Browse Dealers... </h1>
</div>


<div class="row businessListingBox">
  <div class="medium-7 small-12 columns">
    <% @businesses.each do |business| %>
      <div class="row">
        <h2><%= business.name %></h2>
      </div>
      <div class="row">
        <div class="medium-4 small-12 columns">
          <div class="row">
            Picture
          </div>
          <div class="row">
            <%= link_to 'More Info...', business %>
          </div>
        </div>
        <div class="medium-4 small-12 columns">
          <div class="row">
            Review Rating
          </div>
          <div class="row">
            <%= number_to_phone(business.phone_number, area_code: true) %>
          </div>
        </div>
        <div class="medium-4 small-12 columns">
          <div class="row">
            <%= business.address1.split.map(&:capitalize).join(' ') %>
          </div>
          <% if business.address2 %>
            <div class="row">
              <%= business.address2.capitalize %>
            </div>
          <% end %>
          <div class="row">
            <%= business.city.capitalize+', '+business.state.upcase+' '+business.zip %>
          </div>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
  <div class="medium-5 small-12 columns">
    <div id="businessMap">
      map here
    </div>
  </div>
</div>
